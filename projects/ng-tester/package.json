{
  "name": "ng-tester",
  "version": "9.0.0",
  "description": "A library containing structured, opinionated Angular testing schematics.",
  "keywords": [
    "Angular",
    "Schematics",
    "Unit",
    "Testing"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bjsawyer/ng-tester"
  },
  "license": "SEE LICENSE IN LICENSE.txt",
  "scripts": {
    "build": "npx tsc -p tsconfig.schematics.json",
    "postbuild": "npm run copy:unit && npm run copy:collection",
    "copy:unit": "copyfiles schematics/unit ../../dist/ng-tester/schematics",
    "copy:collection": "copyfiles schematics/collection.json ../../dist/ng-tester/schematics/collection.json",
    "test": "npm run build && npx jasmine **/*_spec.js"
  },
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "jasmine-core": "~3.5.0",
    "jasmine-spec-reporter": "~4.2.1",
    "typescript": "~3.7.5"
  },
  "peerDependencies": {
    "@angular/common": ">= 9.0.0",
    "@angular/core": ">= 9.0.0",
    "angular-unit-test-helper": ">= 9.3.0",
    "tslib": ">= 1.10.0"
  },
  "schematics": "./schematics/collection.json"
}
